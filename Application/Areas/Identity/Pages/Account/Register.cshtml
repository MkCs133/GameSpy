@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<head>
    <link rel="stylesheet" href="~/css/userCss.css" />
</head>

<div class="vh-100 d-flex align-content-center register-body">
    <div class="h-100 align-text-center bg-dark w-50 px-5 mx-auto my-border rounded">
        <h1 class="ff-utnr">@ViewData["Title"]</h1>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="ff-utnr">Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control ff-utnr bg-dark my-border mx-auto" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.FirstName" class="ff-utnr">FirstName</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control ff-utnr bg-dark my-border mx-auto" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.LastName" class="ff-utnr">LastName</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control ff-utnr bg-dark my-border mx-auto" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.UserName" class="ff-utnr">UserName</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control ff-utnr bg-dark my-border mx-auto" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="ff-utnr">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control ff-utnr bg-dark my-border mx-auto" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password" class="ff-utnr">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control ff-utnr bg-dark my-border mx-auto" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword" class="ff-utnr">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button id="register" type="submit" class="buttons align-text-center p-2">Register</button>
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
