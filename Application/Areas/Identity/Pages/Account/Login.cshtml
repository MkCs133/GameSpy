@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <link rel="stylesheet" href="~/css/userCss.css" />
    <script type="text/javascript">
        function maximizeWindow() {
            window.moveTo(0, 0);
            window.resizeTo(screen.width, screen.height);
        }
        window.onload = maximizeWindow;
    </script>
</head>
<div id="body" class="container-fluid d-flex vh-100 align-text-center">
    <div id="login-from" class="bg-dark d-flex flex-column align-content-center my-border rounded my-auto mx-auto p-3 ff-utnr">
        <h1 class="ff-tnr">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h2 class="ff-tnr">Use a local account to log in</h2>
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control bg-dark my-border mt-5  mx-auto" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control bg-dark my-border mx-auto" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label ff-tnr">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="ff-utnr">Forgot your password?</a>
                    </p>
                    <p>
                        <a id="forgot-password" asp-page="./Register" class="ff-utnr">Don't have an account? Register</a>
                    </p>
                </div>
                <div>
                    <button id="login" type="submit" class="buttons my-border ff-utnr">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
