@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <link rel="stylesheet" href="../wwwroot/css/Index.css" />
</head>
<div class="vh-100 wb-position body">
    <div id="login-form" class="wb-form ">
        <h1 class="ff-tnr" style="padding-top: 12%">@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <h2 class="ff-tnr" style="margin-bottom: 12%">Use a local account to log in.</h2>
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control ff-tnr w-75 mx-auto" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label" style="margin-left: 11%;">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control ff-tnr w-75 mx-auto" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label ff-tnr" style="margin-left: 11%;">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword" class="ff-tnr">Forgot your password?</a>
                    </p>
                </div>
                <div>
                    <button id="login" type="submit" class="buttons ff-tnr" style="padding-bottom: 5%;">Log in</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
